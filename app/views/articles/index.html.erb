<h1>Articles Listing Page</h1>

<table>
  <thead>
    <tr>
      <th>Title:</th>
      <th>Description: </th>
      <th colspan= "3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @article.each do |t| %>
    <tr>
      <td> <%= t.title %> </td>
      <td> <%= t.description %> </td>
      <td> <%= link_to 'Delete', article_path(t), method: :delete, data: { confirm: 'Are you sure?' } %> </td>
      <td> <%= link_to 'Show', article_path(t) %> </td>
      <td> <%= link_to 'edit', edit_article_path(t) %> </td>
    </tr>
    <% end %>
  </tbody>
</table>

<p>
<%= link_to 'New Article', new_article_path  %> | 
<%= link_to 'Back to home', root_path %>

</p>